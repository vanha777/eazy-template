# Use the official Rust Docker image
FROM rust:latest as builder

# Install OpenSSL development libraries
RUN apt-get update && apt-get install -y libssl-dev

# Set PKG_CONFIG_PATH if necessary
ENV PKG_CONFIG_PATH=/usr/lib/x86_64-linux-gnu/pkgconfig

# Environments
ENV PORT=1010

# Set the working directory
WORKDIR /usr/src/eazy_template

# Copy the application code
COPY . .

# # Make the setup script executable and run it
# RUN chmod +x setup.sh && ./setup.sh

# # Copy the setup script from the service directory to the workspace root
# COPY services/service_eazypic/setup.sh ./setup.sh

# # Make the setup script executable and run it
# RUN chmod +x setup.sh && ./setup.sh

# Make the setup script executable and run it
RUN chmod +x ./services/service_eazypic/setup.sh && ./services/service_eazypic/setup.sh

# Final stage/image
FROM scratch

# Copy the built binary from the builder stage
COPY --from=builder /usr/src/eazy_template/target/release/service_eazypic /service_eazypic

# Set the entry point for the container
ENTRYPOINT ["/service_eazypic"]

# Expose the port the server is running on
EXPOSE 1010
